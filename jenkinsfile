pipeline {
    agent any

    stages {
        stage('Build and Push Image') {
            steps {
                sh 'docker build -t my-app .'
                sh 'docker tag my-app:latest riddhi150/my-app:latest'
                sh 'docker push riddhi150/my-app:latest'
            }
        }
        stage('Run Container in Daemon Mode') {
            steps {
                sh 'docker run -d --name my-app-container riddhi150/my-app:latest'
            }
        }
    }
}